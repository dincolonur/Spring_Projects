<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean id="userImpl" class="com.epam.spring.implementation.UserImpl">
    </bean>

    <bean id="eventImpl" class="com.epam.spring.implementation.EventImpl">
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:auditorium.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>

    <bean id="auditorium" class="com.epam.spring.domain.Auditorium">
        <constructor-arg index="0" value="${name}" />
        <constructor-arg value="${numberOfSeats}" />
        <constructor-arg value="${vipSeats}" />
    </bean>

    <bean id="auditorium2" class="com.epam.spring.domain.Auditorium">
        <constructor-arg value="${name2}" />
        <constructor-arg value="${numberOfSeats2}" />
        <constructor-arg value="${vipSeats2}" />
    </bean>

    <bean id="auditoriumImpl" class="com.epam.spring.implementation.AuditoriumImpl">
        <constructor-arg>
            <set>
                <ref bean="auditorium"/>
                <ref bean="auditorium2"/>
            </set>
        </constructor-arg>
    </bean>

    <bean id="bookingImpl" class="com.epam.spring.implementation.BookingImpl">
    </bean>

    <bean id="bitrhdayStategy" class="com.epam.spring.strategy.BirthdayDiscountStrategy">
    </bean>

    <bean id="tensStrategy" class="com.epam.spring.strategy.TenTicketStrategy">
    </bean>

    <bean id="discountImpl" class="com.epam.spring.implementation.DiscountImpl">
        <constructor-arg>
            <list>
                <ref bean="bitrhdayStategy"/>
                <ref bean="tensStrategy"/>
            </list>
        </constructor-arg>
    </bean>


    <bean id="app" class="com.epam.spring.App">
        <constructor-arg ref="userImpl"/>
        <constructor-arg ref="eventImpl"/>
        <constructor-arg ref="auditoriumImpl"/>
        <constructor-arg ref="bookingImpl"/>
        <constructor-arg ref="discountImpl"/>
    </bean>
</beans>